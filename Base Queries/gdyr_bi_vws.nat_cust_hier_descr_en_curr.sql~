
SELECT
    CUST.SHIP_TO_CUST_ID
    , CUST.SHIP_TO_CUST_NO
    , CUST.CUST_NAME AS SHIP_TO_CUST_NAME

    , CUST.OWN_CUST_ID
    , CUST.OWN_CUST_NAME

    , CUST.SALES_ORG_CD
    , CUST.SALES_ORG_NAME

    , CUST.DISTR_CHAN_CD
    , CUST.DISTR_CHAN_NAME

    , CUST.CUST_GRP_ID
    , CUST.CUST_GRP_NAME

    , CUST.SHIP_TO_CUST_ID || ' - ' || CUST.CUST_NAME AS SHIP_TO_CUST
    , CUST.OWN_CUST_ID || ' - ' || CUST.OWN_CUST_NAME AS OWN_CUST
    , CUST.SALES_ORG_CD || ' - ' || CUST.SALES_ORG_NAME AS SALES_ORG
    , CUST.DISTR_CHAN_CD || ' - ' || CUST.DISTR_CHAN_NAME AS DISTR_CHAN
    , CUST.CUST_GRP_ID || ' - ' || CUST.CUST_GRP_NAME AS CUST_GRP

    , CUST.PRIM_SHIP_FACILITY_ID
    , CUST.DELIV_PRTY_CD
    , CUST.SHIP_COND_ID
    , CUST.DIST_CHAN_GRP_CD
    , CUST.TIRE_CUST_TYP_CD
    , CUST.ACTIV_IND
    , CUST.CUST_GRP1_CD
    , CUST.CUST_GRP2_CD

    , CUST.DIV_CD
    , CUST.SALES_GRP_CD
    , CUST.SALES_DISTR_CD

    , CUST.DISTRICT_NAME
    , CUST.TERR_NAME
    , CUST.CITY_NAME
	, CUST.POSTAL_CD
    , CUST.CNTRY_NAME_CD

FROM GDYR_BI_VWS.NAT_CUST_HIER_DESCR_EN_CURR CUST

ORDER BY
    CUST.SHIP_TO_CUST_ID

